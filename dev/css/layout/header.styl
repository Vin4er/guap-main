.header
	&-logo
		a
			display inline-block
			vertical-align middle
			img
				width: 240px
				display block
				@media (max-width: 1279px)
					width: 172px
	&-nav
		vertical-align middle
		text-align right
		ul
			margin 0
			vertical-align middle
			height 104px
			display inline-block
			vertical-align middle
			line-height 104px
			text-align right
			@media (max-width: 1279px)
				line-height 88px
				height 88px
			li
				display inline-block
				margin 0
				margin-left: 45px
				@media (max-width: 1279px)
					margin-left: 20px
				&:nth-child(1)
					margin 0
					
				&:hover
					opacity: 0.5
				&.hover
					opacity: 0.5
					.material
						transform: rotate(180deg)
						position: relative
						top: -2px
				a
					text-decoration none
					font-size 20px
					font-weight: bold
					text-transform: uppercase
					color #005BAB
					@media (max-width: 1279px)
						font-size 16px
		&-item
			display: inline-block
			width: auto
			&.hover, &:hover
				background rgb(26,108,180)
	&-upper
		background: #F5F5F5
		height 48px
		vertical-align middle
		.table
			height 48px
			vertical-align middle
			margin 0
			padding 0
			width 100%
			table-layout: auto
			&-cell
				vertical-align middle
		ul
			margin 0
			height 48px
			display inline-block
			vertical-align middle
			line-height 48px
			width: 100%
			li
				display inline-block
				margin 0
				margin-right: 23px
				a
					color #005BAB
					text-decoration none
					font-size 14px
		&-left
			text-align: left
		&-right
			text-align right
			ul
				text-align right
				line-height: 48px;
				li
					display inline-block
					margin-left: 0
					margin-right: 0px
	&-downer
		&-popup
			position: relative
			&-item
				overflow: hidden
				&-photo
					width: 33%
					padding-right: 40px
					p
						padding-left: 20px;
						color: rgba(0,0,0,0.5)
						padding-top: 10px;
						padding-right 20px;
					img
						max-width: 340px
						display: block;
						width: 100%
						max-height: 145px
						border-radius: 40px 10px;
				&-links
					vertical-align: top
					margin-bottom: 20px
					font-size: 0
					border-left: 1px solid rgba(0,0,0,0.28)
					column-count: 2;
					div
						display block
						font-size: 14px
						padding-right: 10px;
						padding-left 40px
						a
							margin-bottom: 20px
							display inline-block
							span
								color: #005bab;
								font-size: 16px;
								@media (max-width: 1279px)
									ont-size: 14px;
			&-item
				background: white
				position: absolute
				padding 30px 60px
				&.shower
					position: absolute;
					display: block;
					z-index: 10;
					left: 0;
					top: 0;
					box-shadow: 0px 2px 3px rgba(0, 0, 0, 0.37);
					border-radius: 0 0 10px 10px;
				.table
					width: 100%
					vertical-align: top
					&-cell
						vertical-align: top

		&-up
			.table
				height 104px
				vertical-align middle
				margin 0
				table-layout: auto
				padding 0
				width 100%
				&-cell
					vertical-align middle
				@media (max-width: 1279px)
					height 88px
		&-down
			background: #005bab;
			max-height: 150px;
			vertical-align: middle;
			position: absolute;
			z-index: 9;
			width: 100%;
			font-size: 16px;
			@media (max-width: 1279px)
				font-size: 14px;
			.header-downer-nav-slider
				a
					color: white
					line-height 90px
					height: 90px
					display: inline-block
					width: 192px
					text-align: center
					padding-left: 10px
					padding-right: 10px
					span
						display: inline-block
						vertical-align middle
						line-height: normal
						font-size: 16px

		&-nav
			&-slider
				padding-left: 20px
				padding-right: 20px
				position: relative
				font-size: 16px;
				@media (max-width: 1279px)
					font-size: 14px;
				&:before, &:after
					content: "";
					display: block;
					position: absolute;
					width: 40px;
					height: 100%;
					z-index: 8;
					top: 0px;
				&:after
					right: 19px;
					background: linear-gradient(to right,  rgba(0,91,171,0) 0%,rgba(0,91,171,0.72) 53%,rgba(0,91,171,1) 100%)
				&:before
					left: 19px;
					background: linear-gradient(to left,  rgba(0,91,171,0) 0%,rgba(0,91,171,0.72) 53%,rgba(0,91,171,1) 100%)

				.swiper-button
					color: white;
					font-size: 32px;
					width: auto !important;
					height: auto !important;
					background: transparent
					&-prev
						left: 0px;
					&-next
						right: 0px;