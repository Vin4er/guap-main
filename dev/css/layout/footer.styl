.footer
	padding-bottom: 20px
	background: #f5f5f5
	padding-top: 45px
	.wrap
		padding 0
	&-text
		border-top 1px solid rgba(0, 0, 0, 0.04)
		padding-top 14px
		line-height 20px
		.table
			table-layout: auto
			.table-cell
				vertical-align top
				p
					padding-right: 30px
	&-social
		display: inline-block;
		white-space: nowrap;
		a
			display inline-block
			margin-left 8px
			margin-right 8px
	&-internet
		padding-bottom 50px
		max-width 700px
		width 100%
		font-size: 12px
		a
			color #005BAB
	&-contacts
		.table-cell
			width 25%
		.phone
			margin-bottom 13px
			display block
		&-item
			padding-bottom 10px
			display block
			color: #000000
			font-size 16px
			&-about
				color: rgba(0,0,0,.5)
				font-size: 15px
		&-content
			padding-top 14px
		&-text
			font-size 16px
			text-transform: uppercase
			white-space: normal
			font-weight: bold
			display inline-block
			vertical-align middle
			padding-left 20px
		&-title
			display inline-block
			vertical-align middle
			white-space: nowrap
			&:hover
				text-decoration: underline
				cursor: pointer
			&-cn
				font-size 16px
				display block
				&:hover
					text-decoration: underline
					cursor: pointer
			div
				display inline-block
				vertical-align middle
		.table-cell
			vertical-align top